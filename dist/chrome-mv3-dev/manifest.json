{
  "manifest_version": 3,
  "name": "科研院智能台账助手",
  "description": "科研院智能台账助手：适配于三峡数字商旅系统报销系统项目台账自动生成&管理。",
  "version": "1.0.0",
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "64": "icon/64.png",
    "128": "icon/128.png"
  },
  "permissions": [
    "<all_urls>",
    "scripting",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "tabs"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "injected.js"
      ],
      "matches": [
        "*://*/*"
      ]
    },
    {
      "resources": [
        "content-scripts/content.css"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "commands": {
    "wxt:reload-extension": {
      "description": "Reload the extension during development",
      "suggested_key": {
        "default": "Alt+R"
      }
    }
  },
  "version_name": "1.0.0-alpha",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Default Popup Title",
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "*://*/*",
    "http://localhost/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval' http://localhost:3000; object-src 'self';",
    "sandbox": "script-src 'self' 'unsafe-inline' 'unsafe-eval' http://localhost:3000; sandbox allow-scripts allow-forms allow-popups allow-modals; child-src 'self';"
  }
}